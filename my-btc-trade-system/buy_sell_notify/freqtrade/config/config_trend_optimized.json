{
    "max_open_trades": 6,
    "stake_currency": "USDT",
    "stake_amount": "unlimited",
    "tradable_balance_ratio": 0.99,
    "fiat_display_currency": "USD",
    "dry_run": true,
    "dry_run_wallet": 500,
    "cancel_open_orders_on_exit": true,
    
    "trading_mode": "futures",
    "margin_mode": "isolated",
    
    "unfilledtimeout": {
        "entry": 8,
        "exit": 8,
        "exit_timeout_count": 0,
        "unit": "minutes"
    },
    
    "order_types": {
        "entry": "limit",
        "exit": "limit",
        "emergency_exit": "market",
        "force_entry": "market",
        "force_exit": "market",
        "stoploss": "market",
        "stoploss_on_exchange": true,
        "stoploss_on_exchange_interval": 45,
        "stoploss_on_exchange_limit_ratio": 0.99
    },
    
    "order_time_in_force": {
        "entry": "gtc",
        "exit": "gtc"
    },
    
    "pairlists": [
        {
            "method": "StaticPairList"
        }
    ],
    
    "pair_whitelist": [
        "BTC/USDT",
        "ETH/USDT",
        "BNB/USDT",
        "SOL/USDT",
        "XRP/USDT",
        "ADA/USDT",
        "AVAX/USDT",
        "DOT/USDT",
        "DOGE/USDT",
        "SUI/USDT",
        "LINK/USDT",
        "NEAR/USDT",
        "UNI/USDT",
        "WIF/USDT"
    ],

    "pair_blacklist": [
        "LUNA/.*",
        "FTT/.*",
        "(GT|HT)/.*"
    ],

    "exchange": {
        "name": "binance",
        "key": "YOUR_API_KEY",
        "secret": "YOUR_SECRET_KEY",
        "ccxt_config": {
            "enableRateLimit": true,
            "rateLimit": 50,
            "options": {
                "defaultType": "future"
            }
        },
        "ccxt_async_config": {
            "enableRateLimit": true,
            "rateLimit": 50
        },
        "pair_whitelist": [ "BTC/USDT:USDT",
        "ETH/USDT:USDT",
        "BNB/USDT:USDT",
        "SOL/USDT:USDT",
        "XRP/USDT:USDT",
        "ADA/USDT:USDT",
        "AVAX/USDT:USDT",
        "DOT/USDT:USDT",
        "DOGE/USDT:USDT",
        "SUI/USDT:USDT",
        "LINK/USDT:USDT",
        "NEAR/USDT:USDT",
        "UNI/USDT:USDT",
        "WIF/USDT:USDT"],
        "pair_blacklist": [],
        "markets_refresh_interval": 60
    },
    
    "entry_pricing": {
        "price_side": "same",
        "use_order_book": true,
        "order_book_top": 1,
        "price_last_balance": 0.0,
        "check_depth_of_market": {
            "enabled": true,
            "bids_to_ask_delta": 1
        }
    },
    
    "exit_pricing": {
        "price_side": "other",
        "use_order_book": true,
        "order_book_top": 1
    },
    
    "strategy": "TripleTimeframeTrendStrategyOptimized",

    "bot_name": "OptimizedTrendBot",
    "initial_state": "running",
    "force_entry_enable": false,
    "internals": {
        "process_throttle_secs": 3,
        "heartbeat_interval": 45
    },
    
    "dataformat_ohlcv": "json",
    "dataformat_trades": "jsongz",
    
    "webhook": {
        "enabled": false,
        "url": "http://127.0.0.1:8080/webhook",
        "webhookentry": {
            "value1": "Optimized Strategy Entry",
            "value2": "{{pair}} - {{enter_tag}}",
            "value3": "Strength: {{signal_strength}}"
        },
        "webhookexit": {
            "value1": "Optimized Strategy Exit", 
            "value2": "{{pair}} - {{exit_tag}}",
            "value3": "Profit: {{profit_ratio:.2%}}"
        },
        "webhookstatus": {
            "value1": "Status: {{status}}",
            "value2": "Open Trades: {{open_trades}}",
            "value3": "Balance: {{balance}}"
        }
    },
    
    "telegram": {
        "enabled": false,
        "token": "YOUR_TELEGRAM_BOT_TOKEN",
        "chat_id": "YOUR_TELEGRAM_CHAT_ID",
        "notification_settings": {
            "status": "silent",
            "warning": "on",
            "startup": "on",
            "buy": "on",
            "buy_cancel": "on", 
            "sell": "on",
            "sell_cancel": "on",
            "protection_trigger": "on",
            "protection_trigger_global": "on",
            "show_candle": "ohlc"
        }
    }
}